<Window x:Class="SupermarketPOS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supermarket POS" Width="1000" Height="800">
    <Grid>
        <!-- Main Content -->
        <Grid x:Name="MainContent">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="112*"/>
                    <ColumnDefinition Width="33*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Barcode Input -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.ColumnSpan="2">
                    <TextBlock Text="Scan Barcode:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="BarcodeTextBox" Width="287" KeyDown="BarcodeTextBox_KeyDown" Background="White"/>
                </StackPanel>

                <!-- Cart Grid -->
                <DataGrid x:Name="CartGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,50" Grid.ColumnSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Naam}" Width="*"/>
                        <DataGridTextColumn Header="Prijs" Binding="{Binding Prijs}" Width="100"/>
                        <DataGridTextColumn Header="BTW" Binding="{Binding BTW}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Total and Checkout -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0 10 0 0" Grid.Column="1">
                    <TextBlock Text="Totaal: " FontSize="16" FontWeight="Bold" Height="25" Width="57"/>
                    <TextBlock x:Name="TotalText" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0 10 0 0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                        <Button x:Name="CashButton"
                                Content="Cash"
                                Width="120"
                                Height="30"
                                HorizontalAlignment="Left"
                                Click="CashButton_Click"
                                FontSize="14"
                                FontWeight="Bold"/>
                        <Button x:Name="SalesButton" 
                                Content="Sales" 
                                Width="120" 
                                Height="30" 
                                Margin="10,0,0,0" 
                                Click="SalesButton_Click" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Background="#FFCECECE"/>
                        <Button x:Name="newProductButton" 
                                Content="Products" 
                                Width="120" 
                                Height="30" 
                                Margin="10,0,0,0" 
                                Click="NewProductButton_Click" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Background="#FFCECECE"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Full-screen Overlay -->
        <Grid x:Name="OverlayPanel" Background="#80000000" Visibility="Collapsed" Panel.ZIndex="100">
            <ContentControl x:Name="OverlayContent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>