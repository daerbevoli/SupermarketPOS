<Window x:Class="SupermarketPOS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supermarket POS" Height="600" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barcode Input -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Scan Barcode:" VerticalAlignment="Center" Width="120"/>
            <TextBox x:Name="BarcodeTextBox" Width="250" KeyDown="BarcodeTextBox_KeyDown"/>
        </StackPanel>

        <!-- Cart Grid -->
        <DataGrid x:Name="CartGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding Naam}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Prijs}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total and Checkout -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0 10 0 0">
            <TextBlock Text="Total: " FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalText" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
