<Window x:Class="SupermarketPOS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supermarket POS" Height="400" Width="600">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Barcode Input -->
		<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
			<TextBlock Text="Scan Barcode:" VerticalAlignment="Center" Width="120"/>
			<TextBox x:Name="BarcodeTextBox" Width="287" KeyDown="BarcodeTextBox_KeyDown"/>
		</StackPanel>

		<!-- Cart Grid -->
		<DataGrid x:Name="CartGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,51">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Product" Binding="{Binding Naam}" Width="*"/>
				<DataGridTextColumn Header="Prijs" Binding="{Binding Prijs}" Width="100"/>
				<DataGridTextColumn Header="BTW" Binding="{Binding BTW}" Width="100"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Total and Checkout -->
		<StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0 10 0 0">
			<TextBlock Text="Totaal: " FontSize="16" FontWeight="Bold" RenderTransformOrigin="-7.674,0.293" Height="25" Width="57">
				<TextBlock.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform AngleX="0"/>
						<RotateTransform Angle="-0.234"/>
						<TranslateTransform X="0"/>
					</TransformGroup>
				</TextBlock.RenderTransform>
			</TextBlock>
			<TextBlock x:Name="TotalText" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
		</StackPanel>

		<Grid Grid.Row="2" Margin="0 10 0 0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="CashButton"
                    Content="Cash"
                    Width="120"
                    Height="30"
                    HorizontalAlignment="Left"
                    Click="CashButton_Click"
                    FontSize="14"
                    FontWeight="Bold"/>
		</Grid>
	</Grid>
</Window>
